{% extends "../../layout.njk" %}

{% block page_title %}
  There was a problem with your payment
{% endblock %}

{% block content %}
  <main id="content" class="content-wrapper error-pages grid-row">
    <div class="column-two-thirds">
      <h1 class="heading-large qa-payment-declined">Your payment has been declined</h1>
      <p class="lede">Contact your bank for more details. No money has been taken from your account.</p>

      <a class="lede" href="{{ returnUrl }}" id="return-url">Go back to try the payment again</a>
      <br/>
    </div>
  </main>
{% endblock %}
