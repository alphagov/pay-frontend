{
  "name": "pay-frontend",
  "description": "Payments Frontend application",
  "version": "0.0.1",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": "^12.22.1"
  },
  "standard": {
    "globals": [
      "describe",
      "context",
      "before",
      "beforeEach",
      "after",
      "afterEach",
      "it",
      "expect",
      "cy",
      "Cypress",
      "i18n",
      "PaymentRequest",
      "ApplePaySession",
      "ApplePayError",
      "ga",
      "fetch",
      "Element",
      "location",
      "Charge",
      "parent",
      "showCardType",
      "openregisterLocationPicker"
    ],
    "ignore": [
      "app/assets/javascripts/modules/*.js"
    ]
  },
  "scripts": {
    "prepare": "npm run compile",
    "compile": "grunt generate-assets",
    "clean": "grunt clean",
    "start": "node start.js",
    "start:dev": "nodemon -e js,njk -r dotenv/config start-dev.js",
    "watch": "chokidar app test *.js --initial -c 'npm run test'",
    "lint": "standard --fix",
    "watch-live-reload": "grunt watch",
    "test": "rm -rf ./pacts && DISABLE_APPMETRICS=true mocha --exclude **/*.cy.test.js '!(node_modules)/**/*.test'.js",
    "cypress:server": "mb | DISABLE_APPMETRICS=true node -r dotenv/config start.js dotenv_config_path=test/cypress/test.env",
    "cypress:test": "cypress run",
    "cypress:test-headed": "cypress open",
    "snyk-protect": "snyk protect",
    "prepublish": "npm run snyk-protect",
    "publish-pacts": "./bin/publish-pacts.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint",
      "git add"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "test/*",
      "assets/*",
      "Gruntfile.js",
      "app/browsered.js",
      "public/js/*",
      "locales/*"
    ]
  },
  "dependencies": {
    "@aws-crypto/decrypt-node": "^1.0.3",
    "@aws-crypto/raw-rsa-keyring-node": "^1.1.0",
    "@govuk-pay/pay-js-commons": "^3.0.10",
    "@sentry/node": "6.2.5",
    "appmetrics": "5.1.1",
    "appmetrics-statsd": "3.0.0",
    "body-parser": "1.19.x",
    "cert-info": "^1.5.1",
    "change-case": "2.3.x",
    "client-sessions": "0.8.x",
    "compression": "1.7.x",
    "credit-card-type": "6.3.x",
    "csrf": "3.1.x",
    "express": "4.17.x",
    "gaap-analytics": "^3.1.0",
    "govuk-frontend": "^3.11.0",
    "helmet": "3.23.3",
    "humps": "^2.0.1",
    "i18n": "0.13.x",
    "lodash": "4.17.x",
    "mailcheck": "^1.1.1",
    "memory-cache": "^0.2.0",
    "metrics": "0.1.21",
    "minimist": "1.2.x",
    "moment-timezone": "^0.5.33",
    "morgan": "1.10.x",
    "nunjucks": "^3.2.2",
    "polyfill-array-includes": "^2.0.0",
    "promise-polyfill": "8.2.0",
    "randomstring": "^1.1.5",
    "readdir": "1.0.x",
    "request": "^2.88.2",
    "requestretry": "^5.0.0",
    "rfc822-validate": "1.0.x",
    "serve-favicon": "2.5.0",
    "staticify": "5.0.x",
    "throng": "5.0.x",
    "uk-postcode": "0.1.x",
    "winston": "3.3.3"
  },
  "devDependencies": {
    "@babel/core": "^7.13.15",
    "@babel/preset-env": "^7.13.15",
    "@pact-foundation/pact-node": "^10.12.2",
    "browserify": "17.0.x",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "chai-string": "^1.4.0",
    "cheerio": "^1.0.0-rc.6",
    "chokidar-cli": "latest",
    "cypress": "3.1.5",
    "dotenv": "^8.2.0",
    "envfile": "^5.1.0",
    "eslint": "^6.8.0",
    "govuk-country-and-territory-autocomplete": "^1.0.1",
    "grunt": "1.4.0",
    "grunt-babel": "8.0.0",
    "grunt-browserify": "6.0.0",
    "grunt-cli": "1.4.2",
    "grunt-contrib-clean": "2.0.0",
    "grunt-contrib-compress": "2.0.0",
    "grunt-contrib-concat": "1.0.1",
    "grunt-contrib-copy": "1.0.0",
    "grunt-contrib-uglify": "5.0.1",
    "grunt-contrib-watch": "1.1.0",
    "grunt-rewrite": "1.0.1",
    "grunt-sass": "3.1.0",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "mocha": "7.2.x",
    "mountebank": "2.4.0",
    "nock": "13.0.11",
    "node-sass": "5.0.0",
    "nodemon": "^2.0.7",
    "nyc": "15.1.x",
    "pact": "4.3.2",
    "pay-product-page": "https://github.com/alphagov/pay-product-page/releases/download/4.8.8/pay-product-page-4.8.8.tgz",
    "proxyquire": "~2.1.3",
    "sass-lint": "^1.13.1",
    "sinon": "10.0.x",
    "snyk": "^1.560.x",
    "standard": "^14.3.x",
    "superagent": "^6.1.0",
    "supertest": "^6.1.3"
  },
  "nyc": {
    "reporter": "text",
    "check-coverage": false,
    "per-file": true,
    "lines": 85,
    "statements": 85,
    "functions": 85,
    "branches": 85
  },
  "snyk": true
}
