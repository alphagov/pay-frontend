{
  "name": "pay-frontend",
  "description": "Payments Frontend application",
  "version": "0.0.1",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": ">8.11.3"
  },
  "standard": {
    "globals": [
      "describe",
      "context",
      "before",
      "beforeEach",
      "after",
      "afterEach",
      "it",
      "expect",
      "cy",
      "Cypress",
      "i18n",
      "PaymentRequest",
      "ApplePaySession",
      "ApplePayError",
      "ga",
      "fetch"
    ],
    "ignore": [
      "app/assets/javascripts/modules/*.js"
    ]
  },
  "scripts": {
    "compile": "grunt generate-assets",
    "clean": "grunt clean",
    "start": "node start.js",
    "watch": "chokidar app test *.js --initial -c 'npm run test'",
    "lint": "standard --fix",
    "watch-live-reload": "./node_modules/.bin/grunt watch",
    "test": "rm -rf ./pacts && DISABLE_APPMETRICS=true node ./node_modules/mocha/bin/mocha '!(node_modules)/**/*+(_test|_tests|.test)'.js",
    "cypress:server": "mb | DISABLE_APPMETRICS=true node -r dotenv/config start.js dotenv_config_path=test/cypress/test.env",
    "cypress:test": "cypress run",
    "cypress:test-headed": "cypress open",
    "snyk-protect": "snyk protect",
    "prepublish": "npm run snyk-protect",
    "publish-pacts": "./bin/publish-pacts.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint",
      "git add"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "test/*",
      "assets/*",
      "Gruntfile.js",
      "app/browsered.js",
      "public/js/*"
    ]
  },
  "dependencies": {
    "@govuk-pay/pay-js-commons": "^2.0.1",
    "accessible-autocomplete": "^1.6.2",
    "appmetrics": "4.0.x",
    "appmetrics-statsd": "3.0.x",
    "aws-xray-sdk": "^2.2.0",
    "body-parser": "1.18.x",
    "cert-info": "^1.5.1",
    "change-case": "2.3.x",
    "client-sessions": "0.8.x",
    "compression": "1.7.x",
    "continuation-local-storage": "^3.2.1",
    "credit-card-type": "6.3.x",
    "csrf": "3.0.x",
    "express": "4.16.x",
    "gaap-analytics": "^3.0.0",
    "govuk-frontend": "^2.9.0",
    "humps": "^2.0.1",
    "i18n": "0.8.x",
    "lodash": "4.17.x",
    "mailcheck": "^1.1.1",
    "memory-cache": "^0.2.0",
    "minimist": "1.2.x",
    "morgan": "1.9.x",
    "nunjucks": "^3.2.0",
    "polyfill-array-includes": "^2.0.0",
    "promise-polyfill": "8.1.0",
    "randomstring": "^1.1.5",
    "readdir": "0.1.x",
    "request": "^2.88.0",
    "requestretry": "^4.0.0",
    "rfc822-validate": "1.0.x",
    "serve-favicon": "2.5.0",
    "staticify": "3.3.x",
    "throng": "4.0.x",
    "uk-postcode": "0.1.x",
    "winston": "2.4.x"
  },
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@babel/preset-env": "^7.4.2",
    "@pact-foundation/pact-node": "^8.1.0",
    "browserify": "16.2.x",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "chai-string": "^1.4.0",
    "cheerio": "^1.0.0-rc.2",
    "chokidar-cli": "latest",
    "cypress": "^3.1.5",
    "dotenv": "^7.0.0",
    "envfile": "^3.0.0",
    "eslint": "^5.15.3",
    "govuk-country-and-territory-autocomplete": "^0.5.2",
    "grunt": "1.0.x",
    "grunt-babel": "^8.0.0-beta.0",
    "grunt-browserify": "5.3.x",
    "grunt-cli": "1.3.x",
    "grunt-contrib-clean": "2.0.x",
    "grunt-contrib-compress": "1.4.x",
    "grunt-contrib-concat": "1.0.x",
    "grunt-contrib-copy": "1.0.x",
    "grunt-contrib-uglify": "^4.0.1",
    "grunt-contrib-watch": "1.1.x",
    "grunt-rewrite": "1.0.x",
    "grunt-sass": "3.0.x",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "mocha": "6.0.x",
    "mountebank": "2.0.0",
    "nock": "10.0.6",
    "node-sass": "4.11.x",
    "nodemon": "^1.18.10",
    "nyc": "13.3.x",
    "pact": "4.3.2",
    "pay-product-page": "https://github.com/alphagov/pay-product-page/releases/download/2.1.70/pay-product-page-2.1.70.tgz",
    "proxyquire": "~2.1.0",
    "sass-lint": "^1.12.1",
    "sinon": "7.3.x",
    "snyk": "^1.147.x",
    "standard": "^12.0.x",
    "superagent": "^4.1.0",
    "supertest": "^4.0.2"
  },
  "nyc": {
    "reporter": "text",
    "check-coverage": false,
    "per-file": true,
    "lines": 85,
    "statements": 85,
    "functions": 85,
    "branches": 85
  },
  "snyk": true
}
